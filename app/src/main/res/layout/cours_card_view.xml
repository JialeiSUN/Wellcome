<com.google.android.material.card.MaterialCardView android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/image_lesson"
                    android:layout_width="match_parent"
                    android:layout_height="194dp"
                    android:scaleType="centerCrop"
                    />
            <TextView
                    android:id="@+id/title_lesson"
                    android:text="Card title"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/address_lesson"
                        android:textSize="14dp"
                        android:text="Secondary text"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/chipGroup_lesson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </com.google.android.material.chip.ChipGroup>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                <Button
                        android:id="@+id/call_button_lesson"
                        android:textSize="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:minHeight="43dp"
                        android:text="Call"
                        android:layout_marginHorizontal="5dp"
                        />
                <Button
                        android:id="@+id/consulter_button_lesson"
                        android:textSize="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:minHeight="43dp"
                        android:text="Consult"
                        android:layout_marginHorizontal="5dp"
                        />
                <Button
                        android:id="@+id/add_favorites_lesson"
                        android:textSize="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:minHeight="43dp"
                        android:text="Save"
                        android:layout_marginHorizontal="5dp"
                        />
            </LinearLayout>
            <Button
                    android:id="@+id/check_distances_lesson"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="43dp"
                    android:text="Get Distance"
                    android:layout_marginHorizontal="5dp"
                    />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>