
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="restrictions" type="com.example.wellcome.utils.db.HostRestrictions"/>
    </data>
    <RelativeLayout
            android:id="@+id/content" android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:background="@color/white">

        <include android:id="@+id/top_app_bar_restrictions" layout="@layout/top_app_bar"/>

        <LinearLayout
                android:layout_below="@id/top_app_bar_restrictions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="23dp"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="23dp">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                    <TextView
                            android:text="@string/restrictions_adults"
                            android:textSize="18dp"
                            android:fontFamily="@font/ralewaybold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_marginBottom="1dp"/>
                    <TextView
                            android:textSize="13dp"
                            android:fontFamily="@font/ralewaymedium"
                            android:text="@string/restrictions_adults_details"
                            android:textColor="@color/grey_200"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">
                    <com.google.android.material.button.MaterialButton
                            style="@style/ButtonRemove"
                            app:icon="@drawable/baseline_remove_24"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{Integer.toString(restrictions.travelers)}"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">
                    </TextView>
                    <com.google.android.material.button.MaterialButton
                            style="@style/ButtonAdd"
                            app:icon="@drawable/baseline_add_24"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                            />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/divider"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="23dp">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                    <TextView
                            android:text="@string/restrictions_childrens"
                            android:textSize="18dp"
                            android:fontFamily="@font/ralewaybold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_marginBottom="1dp"/>
                    <TextView
                            android:textSize="13dp"
                            android:fontFamily="@font/ralewaymedium"
                            android:text="@string/restrictions_childrens_details"
                            android:textColor="@color/grey_200"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">
                    <com.google.android.material.button.MaterialButton
                            style="@style/ButtonRemove"
                            app:icon="@drawable/baseline_remove_24"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{Integer.toString(restrictions.childs)}"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">
                    </TextView>
                    <com.google.android.material.button.MaterialButton
                            style="@style/ButtonAdd"
                            app:icon="@drawable/baseline_add_24"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                            />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/divider"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="23dp">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                    <TextView
                            android:text="@string/restrictions_babies"
                            android:textSize="18dp"
                            android:fontFamily="@font/ralewaybold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_marginBottom="1dp"/>
                    <TextView
                            android:textSize="13dp"
                            android:fontFamily="@font/ralewaymedium"
                            android:text="@string/restrictions_babies_details"
                            android:textColor="@color/grey_200"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">
                    <com.google.android.material.button.MaterialButton
                            style="@style/ButtonRemove"
                            app:icon="@drawable/baseline_remove_24"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{Integer.toString(restrictions.babies)}"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">
                    </TextView>
                    <com.google.android.material.button.MaterialButton
                            style="@style/ButtonAdd"
                            app:icon="@drawable/baseline_add_24"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                            />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/divider"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="23dp">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                    <TextView
                            android:text="@string/restrictions_pets"
                            android:textSize="18dp"
                            android:fontFamily="@font/ralewaybold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_marginBottom="1dp"/>
                    <TextView
                            android:textSize="13dp"
                            android:fontFamily="@font/ralewaymedium"
                            android:text="@string/restrictions_pets_details"
                            android:textColor="@color/grey_200"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">
                    <com.google.android.material.button.MaterialButton
                            style="@style/ButtonRemove"
                            app:icon="@drawable/baseline_remove_24"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{Integer.toString(restrictions.pets)}"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">
                    </TextView>
                    <com.google.android.material.button.MaterialButton
                            style="@style/ButtonAdd"
                            app:icon="@drawable/baseline_add_24"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                            />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">
            <com.google.android.material.divider.MaterialDivider
                    app:dividerColor="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dividerThickness="0.8dp"></com.google.android.material.divider.MaterialDivider>
            <Button
                    android:id="@+id/search_button"
                    android:enabled="false"
                    android:layout_marginRight="23dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="Search"
                    android:textAppearance="@style/TabTextAppearence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/baseline_search_24"
                    style="@style/MaterialButtonStyle" />
        </RelativeLayout>

    </RelativeLayout>

</layout>