<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RequestActivity"
        android:orientation="vertical"
        android:padding="10dp">

    <TextView
            android:textColor="@color/black"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="25dp"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request to stay"/>

    <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="25dp">
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0.0dip" android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.0">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textSize="16dp"
                    android:text="Name"
                    android:id="@+id/request_name"
                    android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0.0dip" android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.0">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/request_phone"
                    android:textSize="16dp"
                    android:text="Phone"
                    android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField_dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">
        <com.google.android.material.textfield.TextInputEditText
                android:textSize="16dp"
                android:text="When are you going ?"
                android:id="@+id/editText_Dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField_travelers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">
        <com.google.android.material.textfield.TextInputEditText
                android:textSize="16dp"
                android:text="How many travelers ?"
                android:id="@+id/editText_travelers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            app:boxBackgroundMode="outline"
            app:expandedHintEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:overScrollMode="always"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:height="150dp"
                android:textSize="16dp"
                android:text="Tell the host with a sincere message"
                android:id="@+id/editText_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
            android:padding="25dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >
        <Button
                android:id="@+id/request_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:text="Request to stay"/>
    </LinearLayout>



</LinearLayout>