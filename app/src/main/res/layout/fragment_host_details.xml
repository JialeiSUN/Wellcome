<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".HostDetailsFragment"
        android:transitionName="transition">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test2" />
            <LinearLayout
                    android:layout_marginVertical="23dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="25dp">
                <TextView
                        android:includeFontPadding="false"
                        android:textSize="24dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewaybold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ravissant studio confortable, terrase et parking"/>

                <TextView
                        android:drawableTint="#fccc57"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/baseline_start_24_resized"
                        android:includeFontPadding="false"
                        android:layout_marginTop="10dp"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4,45 (29 commentaires)"/>

                <TextView
                        android:includeFontPadding="false"
                        android:layout_marginTop="5dp"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saint-Ouen-d'Aunis, Nouvelle-Aquitaine, France"/>

                <com.google.android.material.divider.MaterialDivider android:layout_width="match_parent"
                        android:layout_marginVertical="20dp"
                        android:layout_height="wrap_content"
                        app:dividerColor="@color/divider"
                        android:layout_marginBottom="23dp" />

                <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                                android:includeFontPadding="false"
                                android:textSize="23dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/ralewaybold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Marco Karmann"/>
                        <TextView
                                android:includeFontPadding="false"
                                android:textSize="23dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/ralewaybold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IT Engineer"/>
                    </LinearLayout>
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_gravity="right"
                            android:layout_alignParentRight="true"
                            android:id="@+id/profile_image"
                            android:layout_width="44dp"
                            android:layout_marginRight="15dp"
                            android:layout_height="44dp"
                            android:src="@drawable/profile_picture" />
                </RelativeLayout>
                <TextView
                        android:includeFontPadding="false"
                        android:layout_marginTop="8dp"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Travelers, 1 room, 1 bathroom"/>

                <com.google.android.material.divider.MaterialDivider android:layout_width="match_parent"
                        android:layout_marginVertical="20dp"
                        android:layout_height="wrap_content"
                        app:dividerColor="@color/divider"
                        android:layout_marginBottom="23dp" />

                <TextView
                        android:includeFontPadding="false"
                        android:textSize="23dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewaybold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Where is located the host"/>

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="12dp">
                    <fragment
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>

                <TextView
                        android:includeFontPadding="false"
                        android:layout_marginTop="25dp"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewaysemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saint-Ouen-d'Aunis, Nouvelle-Aquitaine, France"/>

                <com.google.android.material.divider.MaterialDivider android:layout_width="match_parent"
                        android:layout_marginVertical="20dp"
                        android:layout_height="wrap_content"
                        app:dividerColor="@color/divider"
                        android:layout_marginBottom="23dp" />

                <TextView
                        android:includeFontPadding="false"
                        android:textSize="23dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewaybold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About me"/>

                <TextView
                        android:includeFontPadding="false"
                        android:layout_marginTop="10dp"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meeting new people excites me"/>

                <TextView
                        android:layout_marginTop="15dp"
                        android:includeFontPadding="false"
                        android:textSize="23dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewaybold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M.32"/>

                <TextView
                        android:gravity="center"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/baseline_language_24"
                        android:includeFontPadding="false"
                        android:layout_marginTop="10dp"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewaymedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fluent in english "/>
            </LinearLayout>
        </LinearLayout>



</ScrollView>