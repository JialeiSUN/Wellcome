<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ServicesFragment">

        <LinearLayout
                android:background="@color/crane_purple_800"
                android:id="@+id/top_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/services_top_bar" layout="@layout/services_top_bar"/>
        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
                android:backgroundTint="@color/crane_purple_800"
                android:id="@+id/nav_host_fragment"
                android:name="androidx.navigation.fragment.NavHostFragment"
                app:defaultNavHost="true"
                app:navGraph="@navigation/services_nav_graph"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/top_container"
                app:layout_constraintBottom_toTopOf="@id/bottom_navigation"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
                        app:itemTextColor="@color/white"
                        app:itemIconTint="@color/white"
                        app:elevation="50dp"
                        app:labelVisibilityMode="selected"
                        app:backgroundTint="@color/crane_purple_800"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/bottom_navigation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:menu="@menu/bottom_nav_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>