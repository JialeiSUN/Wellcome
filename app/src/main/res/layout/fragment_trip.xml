<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="com.example.wellcome.data.SharedTripViewModel"/>
        <import type="android.text.TextUtils"/>
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:background="@color/crane_purple_800"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:orientation="vertical"
                >
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textField_restrictions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="25dp"
                    app:boxBackgroundMode="filled"
                    app:startIconTint="@{viewModel.travelers > 0 ? @color/white : @color/grey_100}"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:transitionName="shared_element_container_restrictions"
                    app:startIconDrawable="@drawable/baseline_person_24">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editText_restrictions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_corner_toggle"
                        android:padding="15dp"
                        android:text="@{viewModel.travelers > 0 ? viewModel.travelersFormat : @string/host_restrictions }"
                        android:textColor="@{viewModel.travelers > 0 ? @color/white : @color/grey_100}"
                        android:fontFamily="@font/ralewaymedium"
                        android:focusable="false"
                        />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textField_dates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="25dp"
                    app:boxBackgroundMode="filled"
                    app:startIconTint="@{!TextUtils.isEmpty(viewModel.dateFormat) ? @color/white : @color/grey_100}"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:startIconDrawable="@drawable/baseline_date_range_24"
                    android:transitionName="shared_element_container_dates">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editText_dates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_corner_toggle"
                        android:padding="15dp"
                        android:text="@{viewModel.dateFormat ?? @string/dates}"
                        android:textColor="@{!TextUtils.isEmpty(viewModel.dateFormat) ? @color/white : @color/grey_100}"
                        android:fontFamily="@font/ralewaymedium"
                        android:focusable="false"

                        />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textField_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="25dp"
                    app:boxBackgroundMode="filled"
                    app:startIconTint="@color/grey_100"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:transitionName="shared_element_container_location"
                    app:startIconDrawable="@drawable/baseline_hotel_24">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editText_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_corner_toggle"
                        android:padding="15dp"
                        android:focusable="false"
                        android:text="@string/Location"
                        android:textColor="@color/grey_100"
                        android:fontFamily="@font/ralewaymedium"
                        />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <include layout="@layout/content_restrictions"
                android:id="@+id/bottom_sheet_restrictions"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>