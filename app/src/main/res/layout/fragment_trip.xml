<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="viewModel" type="com.example.wellcome.com.example.wellcome.data.TripFormViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_container">

    <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/crane_purple_800">

        <fragment android:id="@+id/top_bar_fragment"
                android:name="com.example.wellcome.TopBarFragment"
                android:label="TopBarFragment"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
        </fragment>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical"
                >
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textField_restrictions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="25dp"
                    app:boxBackgroundMode="filled"
                    app:startIconTint="@color/grey_100"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:transitionName="shared_element_container_restrictions"
                    app:startIconDrawable="@drawable/baseline_person_24">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editText_restrictions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_corner_toggle"
                        android:padding="15dp"
                        android:text='@{viewModel.hostRestrictions.travelers != 0 ?
                        viewModel.hostRestrictions.travelers : 15}'
                        android:textColor="@color/grey_100"
                        android:fontFamily="@font/ralewaymedium"
                        android:focusable="false"
                        />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textField_dates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="25dp"
                    app:boxBackgroundMode="filled"
                    app:startIconTint="@color/grey_100"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:startIconDrawable="@drawable/baseline_date_range_24"
                    android:transitionName="shared_element_container_dates">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editText_dates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_corner_toggle"
                        android:padding="15dp"
                        android:text="@string/dates"
                        android:textColor="@color/grey_100"
                        android:fontFamily="@font/ralewaymedium"
                        android:focusable="false"

                        />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textField_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="25dp"
                    app:boxBackgroundMode="filled"
                    app:startIconTint="@color/grey_100"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:transitionName="shared_element_container_location"
                    app:startIconDrawable="@drawable/baseline_hotel_24">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editText_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_corner_toggle"
                        android:padding="15dp"
                        android:focusable="false"
                        android:text="@string/Location"
                        android:textColor="@color/grey_100"
                        android:fontFamily="@font/ralewaymedium"
                        />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>