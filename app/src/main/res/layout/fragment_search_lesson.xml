<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/contextViewService">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0.0dip" android:layout_height="fill_parent"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_gravity="center_horizontal"
                android:hint="Search"
                app:counterEnabled="false"
                app:counterMaxLength="15"
                app:errorEnabled="true"
                app:helperTextEnabled="true"
                android:layout_weight="1.0">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/lesson_titre"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_width="5dp"
                android:layout_height="55dp"
                android:id="@+id/search_bar_lesson"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="24px"
                android:text="Search"
                android:layout_weight="0.25"/>
            <Button
                android:layout_width="5dp"
                android:layout_height="55dp"
                android:id="@+id/tags_lesson"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="24px"
                android:text="tags"
                android:layout_weight="0.2"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="15dp"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="15dp"
            android:id="@+id/recycler_view_host"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="15dp"
        android:id="@+id/recycler_view_assistance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:id="@+id/checkbox_test">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="15dp"
            android:id="@+id/recycler_view_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</FrameLayout>