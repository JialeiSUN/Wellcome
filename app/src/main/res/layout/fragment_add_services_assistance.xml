<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/services_assistance">
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:id="@+id/checkbox_assistance">
        <CheckBox
            android:id="@+id/checkbox1_assistance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:checked="true"
            android:text="Maintenance"/>
        <CheckBox
            android:id="@+id/checkbox2_assistance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:text="DÃ©coration"/>
        <CheckBox
            android:id="@+id/checkbox3_assistance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:text="Livaison"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp">
        <TextView
            android:id="@+id/assistance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Choisir votre niveau de priority"
            android:textSize="18dp">
        </TextView>

        <Spinner
            android:id="@+id/assistance_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/priority"
            android:spinnerMode="dropdown">
        </Spinner>
    </LinearLayout>


</LinearLayout>