<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ProfileFragment">

    <LinearLayout
            android:id="@+id/profile"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="230dp">
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:id="@+id/profile_image"
                android:src="@drawable/profile_picture"
                android:layout_width="56dp"
                android:layout_height="56dp" />
        <TextView
                android:id="@+id/email"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/ralewaybold"
                android:textSize="25dp"
                android:layout_marginTop="5dp"
                android:text="jeb@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
                android:id="@+id/manage_profile"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/ralewaybold"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:text="@string/manage_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
            android:layout_below="@+id/profile"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/account_settings"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/ralewaybold"
                android:textSize="20dp"
                android:layout_marginBottom="28dp"
                android:text="@string/account_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <LinearLayout
                android:id="@+id/manage_information"
                android:layout_marginHorizontal="25dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_weight="0.9"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:src="@drawable/outline_account_circle_24"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewaysemibold"
                        android:textSize="17dp"
                        android:text="@string/personal_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                    android:layout_weight="0.1"
                    android:layout_gravity="right"
                    android:rotation="270"
                    android:gravity="right|center_vertical"
                    android:layout_width="wrap_content"
                    android:src="@drawable/outline_expand_more_24"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
                android:layout_marginHorizontal="25dp"
                android:layout_width="match_parent"
                android:layout_marginVertical="15dp"
                android:layout_height="wrap_content"
                app:dividerColor="@color/divider" />

        <LinearLayout
                android:id="@+id/create_new_trip"
                android:layout_marginHorizontal="25dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_weight="0.9"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:src="@drawable/baseline_home_24"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewaysemibold"
                        android:textSize="17dp"
                        android:text="@string/create_a_new_ad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                    android:layout_weight="0.1"
                    android:layout_gravity="right"
                    android:rotation="270"
                    android:gravity="right|center_vertical"
                    android:layout_width="wrap_content"
                    android:src="@drawable/outline_expand_more_24"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
                android:layout_marginHorizontal="25dp"
                android:layout_width="match_parent"
                android:layout_marginVertical="15dp"
                android:layout_height="wrap_content"
                app:dividerColor="@color/divider" />

        <LinearLayout
                android:id="@+id/view_reservations"
                android:layout_marginHorizontal="25dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_weight="0.9"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:src="@drawable/baseline_receipt_24"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewaysemibold"
                        android:textSize="17dp"
                        android:text="@string/view_reservations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                    android:layout_weight="0.1"
                    android:layout_gravity="right"
                    android:rotation="270"
                    android:gravity="right|center_vertical"
                    android:layout_width="wrap_content"
                    android:src="@drawable/outline_expand_more_24"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>