<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/modify_search_trip_nav_graph"
        app:startDestination="@id/modify_trip_configuration_fragment">

    <fragment
            android:id="@+id/modify_trip_configuration_fragment"
            android:name="com.example.wellcome.ModifyTripConfigurationFragment"
            android:label="trip_configuration"
            tools:layout="@layout/fragment_trip_configuration_modify" >
        <action
                android:id="@+id/navigate_to_restrictions"
                app:destination="@id/modify_trip_restrictions_fragment" />
        <action
                android:id="@+id/navigate_to_dates"
                app:destination="@id/modify_trip_dates_fragment" />
        <action
                android:id="@+id/navigate_to_localisation"
                app:destination="@id/modify_trip_localisation_fragment" />
    </fragment>

    <fragment
            android:id="@+id/modify_trip_restrictions_fragment"
            android:name="com.example.wellcome.ModifyTripRestrictionsFragment"
            android:label="modify_trip_restrictions"
            tools:layout="@layout/fragment_modify_trip_restrictions" >
    </fragment>

    <fragment
            android:id="@+id/modify_trip_dates_fragment"
            android:name="com.example.wellcome.ModifyTripDatesFragment"
            android:label="modify_trip_dates"
            tools:layout="@layout/fragment_modify_trip_dates" >
    </fragment>

    <fragment
            android:id="@+id/modify_trip_localisation_fragment"
            android:name="com.example.wellcome.ModifyTripLocalisationFragment"
            android:label="modify_trip_localisation"
            tools:layout="@layout/fragment_modify_trip_localisation" >
    </fragment>

</navigation>