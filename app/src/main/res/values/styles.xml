<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Wellcome" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/crane_purple_900</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicatorAnimationMode">linear</item>
        <item name="tabIndicator">@drawable/mtrl_tabs_default_indicator</item>
    </style>

    <style name="TabTextAppearence" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/ralewaysemibold</item>
    </style>

    <style name="ChipAppearence" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/ralewaymedium</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/grey_200</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/ralewaysemibold</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="backgroundTint">@color/color_states_materialbutton</item>
    </style>
    
    <style name="ButtonAddRemove" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="rippleColor">@android:color/transparent</item>
        <item name="iconSize">20dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_width">29dp</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="DisabledButton" parent="ButtonAddRemove">
        <item name="iconTint">@color/grey_100</item>
        <item name="strokeColor">@color/grey_100</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="ActiveButton" parent="ButtonAddRemove">
        <item name="iconTint">@color/grey_700</item>
        <item name="android:enabled">true</item>
        <item name="strokeColor">@color/grey_700</item>
    </style>

    <style name="CalendarTitle">
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/ralewaysemibold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxStrokeColor">#fff</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxStrokeWidth">1.8dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidthFocused">2.5dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginHorizontal">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="TextAppearance.App.Headline6" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/ralewaysemibold</item>
        <item name="android:fontFamily">@font/ralewaysemibold</item>
    </style>

    <style name="TextAppearance.App.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/ralewaysemibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ralewaysemibold</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/ralewaysemibold</item>
        <item name="android:fontFamily">@font/ralewaysemibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.NavigationView" parent="">
        <item name="textAppearanceHeadline6">@style/TextAppearance.App.Headline6</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.App.Subtitle2</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
    </style>

    <style name="Widget.App.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.NavigationView</item>
    </style>
</resources>