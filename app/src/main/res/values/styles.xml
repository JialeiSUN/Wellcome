<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Wellcome" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/crane_purple_900</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicatorAnimationMode">linear</item>
        <item name="tabIndicator">@drawable/mtrl_tabs_default_indicator</item>
    </style>

    <style name="TabTextAppearence" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/ralewaysemibold</item>
    </style>

    <style name="ChipAppearence" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/ralewaymedium</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/grey_200</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/ralewaysemibold</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="backgroundTint">@color/color_states_materialbutton</item>
    </style>
    
    <style name="ButtonAddRemove" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="rippleColor">@android:color/transparent</item>
        <item name="iconSize">20dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_width">29dp</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="DisabledButton" parent="ButtonAddRemove">
        <item name="iconTint">@color/grey_100</item>
        <item name="strokeColor">@color/grey_100</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="ActiveButton" parent="ButtonAddRemove">
        <item name="iconTint">@color/grey_700</item>
        <item name="android:enabled">true</item>
        <item name="strokeColor">@color/grey_700</item>
    </style>

    <style name="MyCustomTheme" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>

    <style name="CalendarTitle">
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/ralewaysemibold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
</resources>